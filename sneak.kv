#: import defs defs
#: import * fear
#: import * bounds
#: import * steering
#: import * kivent_cymunk

SneakGame:

<SneakGame>:
    gameworld: gameworld
    app: app
    gamemap: gamemap
    camera: gameview
    lives: self.lives
    points: self.points
    levelnum: self.levelnum

    GameWorld:
        id: gameworld
        gamescreenmanager: gamescreenmanager
        gmap: gamemap
        phy: cymunk_physics

        size_of_gameworld: 100*1024
        zones: {'general': 20000}

        PositionSystem2D:
            system_id: 'position'
            gameworld: gameworld
            zones: ['general']

        RotateSystem2D:
            system_id: 'rotate'
            gameworld: gameworld
            zones: ['general']

        RotateRenderer:
            system_names: ['renderer', 'position', 'rotate']
            system_id: 'renderer'
            gameworld: gameworld
            zones: ['general']
            shader_source: 'assets/glsl/positionrotateshader.glsl'
            gameview: 'gameview'

        GameMap:
            id: gamemap
            gameworld: gameworld
            map_size: defs.map_size
            size: root.size

        GameView:
            id: gameview
            system_id: 'gameview'
            size: root.size
            pos: root.pos
            window_size: root.size
            do_scroll: True        
            do_scroll_lock: True   
            gameworld: gameworld
            currentmap: gamemap
            updateable: True
            camera_speed_multiplier: 5

        SteeringSystem:
            system_id: 'steering'
            gameworld: gameworld
            camera: gameview
            updateable: True

        CymunkPhysics:
            id: cymunk_physics
            system_id: 'cymunk_physics'
            gameworld: gameworld
            zones: ['general']

        Fear:
            system_id: 'fear'
            gameworld: gameworld
            updateable: True

        Bounds:
            system_id: 'bounds'
            gameworld: gameworld
            updateable: True


    GameScreenManager:
        id: gamescreenmanager
        size: root.size
        pos: root.pos
        gameworld: gameworld

<GameScreenManager>:

    game: self.parent

    GameScreen:
        id: main_screen
        name: 'gameover'
        BoxLayout:
            Widget:
            BoxLayout:
                orientation: 'vertical'
                Widget:
                Label:
                    text: "Game Over"
                    font_size: 50
                BoxLayout:
                    Widget:
                    Button:
                        font_size: 20
                        text: "Play Again"
                        on_press: root.game.on_play()
                        size_hint: 1.0, 0.3
                    Widget:
                Widget:
            Widget:
    
    GameScreen:
        id: levelnum_screen
        name: 'levelnum'
        BoxLayout:
            Widget:
            BoxLayout:
                orientation: 'vertical'
                Widget:
                Label:
                    text: "Level %s"%(root.game.levelnum + 1)
                    font_size: 50
                BoxLayout:
                    Widget:
                    Button:
                        font_size: 20
                        text: "Continue"
                        on_press: root.game.on_play()
                        size_hint: 1.0, 0.3
                    Widget:
                Widget:
            Widget:

    GameScreen:
        id: gameover_screen
        name: 'main'
        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                size_hint: 1.0, 0.1
                orientation: 'horizontal'

                Label:
                    text: "Points: %s"%root.game.points

                Widget:

                Label:
                    text: "Lives: %s"%root.game.lives

            Widget:
                size_hint: 1.0, 0.9


<Label>:
    font_name: "assets/fonts/Death Squad.ttf"
    font_size: 40

